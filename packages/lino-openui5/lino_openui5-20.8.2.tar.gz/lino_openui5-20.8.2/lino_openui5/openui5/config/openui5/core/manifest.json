

{
  "_version": "1.1.0",
  "sap.app": {
	"_version": "1.1.0",
	"id": "lino.app",
	"type": "application",
	"title": "Lino",
	"description": "A Lino site",
	"applicationVersion": {
	  "version": "1.0.0"
	},
    "dataSources": {
      "choicelists_choices": {
        "uri": "/choicelists/",
        "type": "JSON"
      }
    }
  },
  "sap.ui": {
	"_version": "1.1.0",
	"technology": "UI5",
	"deviceTypes": {
	  "desktop": true,
	  "tablet": true,
	  "phone": true
	},
	"supportedThemes": [
	  "sap_belize"
	]
  },
  "sap.ui5": {
	"_version": "1.1.0",
	"rootView": {
          "viewName": "lino.view.App",
          "type": "XML",
          "id": "MAIN_VIEW"

        },

	"dependencies": {
	  "minUI5Version": "1.30",
	  "libs": {
		"sap.m": {}
	  }
	}
    ,"models":{
      "choicelists_choices":{
        "type":"sap.ui.model.json.JSONModel",
        "dataSource":"choicelists_choices"
      }
    },
      "routing": {
         "config": {
            "routerClass": "sap.m.routing.Router",
            "viewType": "XML",
            "viewPath": "lino.view",
            "controlId": "viewport",
            "controlAggregation": "pages",
            "transition": "slide",
            "async": true
         },
         "routes": [{
				"pattern": "",
				"name": "appHome",
				"target": "home"
			 }
			 {% for actor in actors_list %}
			 ,{
				"pattern":"grid/{{actor.actor_id}}:?query:",
				"name": "grid.{{actor.actor_id}}",
				"target": "grid.{{actor.actor_id}}"
			 }
			 {% endfor %}
             {% for detail in detail_list %}
             ,{
				"pattern":"detail/{{detail.actor_id}}/{record_id}",
				"name": "detail.{{detail.actor_id}}",
				"target": "detail.{{detail.actor_id}}"
			 } {% endfor %}

		 ],
         "targets": {
            "home": {
               "viewId": "home",
               "viewName": "dashboard",
               "viewLevel" : 1
            }
            {% for actor in actors_list %}
            ,"grid.{{actor.actor_id}}": {
               "viewId": "grid.{{actor.actor_id}}",
               "viewName": "grid.{{actor.actor_id}}",
               "viewLevel" : 1
            }{% endfor %}

            {% for detail in detail_list %}
            ,"detail.{{detail.actor_id}}": {
              "viewId": "detail.{{detail.actor_id}}",
              "viewName": "detail.{{detail.actor_id}}",
              "viewLevel" : 2
            }{% endfor %}


}

         }
      }
  }
