{% extends "page_base.jinja" %}

{% block main_menu %}
  <li><a href="{{ url_for('account.register') }}">Register</a></li>
{% endblock %}

{% block main_content %}
<div class="section">
  <div class="row">
    <div class="col s2">
    &nbsp;
    </div>
    <div class="col s8" id="dc_main">
      <h2>Welcome back</h2>
      <form method="POST" action="{{ url_for('account.login') }}">
        {{ form.csrf_token }}
        <div class="row">
          {{ form.login(grid="s12") }}
        </div>
        <div class="row">
          {{ form.password(type="password", grid="s12", value=False) }}
        </div>
        <div class="row">
          <div class="col s12 right-align">{{ form.submit }}</div>
        </div>
      </form>
    </div>
    <div class="col s2">
      <img class="hide-on-small-only" src="{{ url_for('static', filename='image/digican.png') }}">
    </div>
  </div>
</div>
{% endblock %}        

{% block page_script %}
$('input#login').characterCounter();
{% endblock %}