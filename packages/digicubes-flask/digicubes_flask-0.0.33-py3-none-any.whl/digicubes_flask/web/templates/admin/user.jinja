{% block mobile_menu %}
    <li><a href="{{ url_for('account.home') }}">Home</a></li>
    <li><a href="{{ url_for('admin.users') }}">User</a></li>
    <li><a href="{{url_for('admin.update_user', user_id=user.id)}}">Edit</a></li>
    <li><a href="{{url_for('admin.delete_user', user_id=user.id)}}">Delete</a></li>
    <li><a href="{{url_for('admin.verify_renew', user_id=user.id)}}">Verify</a></li>
{% endblock %}

{% block main_content %}
<div class="section">
    <div class="row">
        <div class="col s12">
            <h1 class="dc-bottom">{{ user.login | nonefilter }}</h1>
            <h5 class="flowtext dc-top">
                {{ user.first_name | nonefilter }} {{ user.last_name | nonefilter }}
                / Created at {{ user.created_at | digidate}} 
                {% if user.last_login_at %}
                / last login at {{ user.last_login_at | digidate}} 
                {% else %}
                / never logged in
                {% endif %}
            </h5>
        </div>
    </div>
</div>

<div class="section dc-top">
    <div class="row">
        <div class="col s12">
            <h2 class="dc-top">Roles</h2>
            <div>
            {% for role in roles %}
                <div 
                    dc-role-name="{{role[0].name}}" 
                    dc-role-id="{{role[0].id}}" 
                    dc-in="{{role[1]}}" 
                    class="chip blue-grey lighten-5 dc-clickable">...</div>            
            {% endfor %}
            </div>
        </div>
    </div>    
</div>
{% endblock %}

{% block page_script %}

    var has_role_html = '<i class="material-icons yellow-text text-accent-3">star</i>';
    var not_has_role_html = '<i class="material-icons">star_border</i>';

    function updateChip( chip ) {
        $elem = chip;
        role_id = $elem.attr("dc-role-id");
        role_name = $elem.attr("dc-role-name");
        is_in = ($elem.attr("dc-in") == "True");         

        if (is_in) {
            $elem.html(role_name);
            $elem.removeClass("blue-grey lighten-5");
            $elem.addClass("light-blue white-text")
        } else {
            $elem.removeClass("light-blue white-text");
            $elem.addClass("blue-grey lighten-5")
            $elem.html(role_name);
        }
    }

    function changeRole() {

        $elem = $( this );
        role_id = $elem.attr("dc-role-id");
        role_name = $elem.attr("dc-role-name");
        is_in = ($elem.attr("dc-in") == "True");         
        
        operation = is_in ? "remove" : "add"

        console.log(operation);
        
        DigiCubes.toggleUserRole({{user.id}}, role_id, operation)
        .then((data) => {
            if (data.has_role) {
                $(this ).attr("dc-in", "True")
            } else {
                $(this ).attr("dc-in", "False")
            };
            updateChip($( this ));
            console.log(data);
        });
        
    }

    function init() {
        $("div[dc-role-id").each(function( index ) {
            $elem = $( this );
            $elem.click(changeRole);
            $elem.removeClass("close");
            updateChip( $elem );
        });
    }

    $().ready(function() {
        init();
    });

{% endblock %}
