    <li><a href="{{ url_for('admin.users') }}">User</a></li>
    <li><a href="{{url_for('admin.update_user', user_id=user.id)}}">Edit</a></li>
    <li><a href="{{url_for('admin.delete_user', user_id=user.id)}}">Delete</a></li>
