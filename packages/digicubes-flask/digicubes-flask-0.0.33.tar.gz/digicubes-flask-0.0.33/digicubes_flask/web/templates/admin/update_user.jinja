{% extends "admin/base.jinja" %}
{% import "macros/forms.jinja" as forms %}

{% block page_title %}
Update User Account
{% endblock %}

{% block main_content %}
<div class="section">
  <div class="row">
    <div class="col s12" id="dc_main">
      <form method="POST" action="{{ action }}">
          {{ form.csrf_token }}
          {{ forms.row(form, "login") }}
          {{ forms.row_two_columns(form, "first_name", "last_name") }}
          {{ forms.row(form, "email") }}
          {{ forms.row_two_columns(form, "is_active", "is_verified") }}
          {{ forms.submit(form) }}
      </form>
    </div>
  </div>
</div>
{% endblock %}   

{% block page_script %}

  $(document).ready(function() {
    M.updateTextFields();
  });
        
{% endblock %}   
