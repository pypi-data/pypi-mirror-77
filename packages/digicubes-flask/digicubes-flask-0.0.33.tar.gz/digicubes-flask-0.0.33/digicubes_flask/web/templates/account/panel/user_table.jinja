{% macro checkbox(state) -%}
    <i class="small material-icons">done</i>
{%- endmacro %}

<table class="highlight">
    <thead>
        <tr>
            <th>Name</th>
            <th>Login</th>
            <th>Email</th>
            <th>Verified</th>
            <th>Activated</th>
        </tr>
        <tbody>
        {% for user in users %}
        <tr>
            <td>{{ user.last_name }}, {{ user.first_name }}</td>
            <td>{{ user.login }}</td>
            <td>{{ user.email }}</td>
            <td class="dc-icon-column">{{ checkbox(user.is_verified) }}</td>
            <td class="dc-icon-column">{{ checkbox(user.is_active) }}</td>        
        </tr>
        {% endfor %}
        </tbody>
    </thead>
</table>            