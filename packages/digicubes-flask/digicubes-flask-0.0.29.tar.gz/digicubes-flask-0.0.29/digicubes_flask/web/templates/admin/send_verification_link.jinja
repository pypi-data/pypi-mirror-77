{% extends "admin/base.jinja" %}

{% block page_title %}
User Details
{% endblock %}

{% block sub_menu %}
    <li>
        <a href="{{url_for('admin.update_user', user_id=user.id)}}">Edit</a>
    </li>
    <li>
        <a href="{{url_for('admin.delete_user', user_id=user.id)}}">Delete</a>
    </li>
{% endblock %}

{% block main_content %}
<div class="section">
    <div class="row">
        <div class="col s12">
            <h1 class="dc-bottom">User Verification</h1>
            <h5 class="flowtext dc-top">
                Verification link for {{ user.first_name | nonefilter }} {{ user.last_name | nonefilter }}
            </h5>
        </div>
        <div class="col s12">
            The user has to verify his account by clicking the link. Please send the link to the user.
        </div>
        <div class="col s12">
            <a href="{{link}}">Verification link</a>
        </div>
    </div>
</div>

{% endblock %}
